<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Loginbutton"
    android:gravity="center">

    <TextView
        android:id="@+id/textt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginVertical="16dp"
        android:text="Get Appoinment !!"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signupDoctorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textt"
        android:layout_marginTop="51dp"
        android:text="@string/button_name1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signupPatientID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupDoctorID"
        android:layout_marginTop="54dp"
        android:text="@string/button_name2"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/LoginDoctorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupPatientID"
        android:layout_marginTop="54dp"
        android:text="Log In As Doctor"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/LoginPatientID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoginDoctorID"
        android:layout_marginTop="54dp"
        android:text="@string/button_name4"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>